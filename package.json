{
  "name": "react-form-builder",
  "version": "1.0.0",
  "description": "A modern, flexible form builder for React 19 with drag-and-drop functionality and real-time preview",
  "private": false,
  "author": "Kevin",
  "license": "MIT",
  "keywords": [
    "react",
    "form-builder",
    "drag-and-drop",
    "form-generator",
    "react19",
    "nextjs",
    "typescript"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "jest && next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@radix-ui/react-tabs": "^1.1.2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.473.0",
    "next": "15.1.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.19.0",
    "eslint-config-next": "15.1.4",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "postcss": "^8",
    "prettier": "^3.2.0",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
